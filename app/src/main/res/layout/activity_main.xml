<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="shivaji.scheduleapp.MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

        </LinearLayout>

        <Button
            android:text="a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            android:id="@+id/sa" />

        <Button
            android:text="c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:id="@+id/sc" />

        <Button
            android:text="b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sb"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sd"
            android:layout_alignStart="@+id/sb"
            android:id="@+id/se" />

        <Button
            android:text="f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/se"
            android:layout_alignParentEnd="true"
            android:id="@+id/sf" />

        <Button
            android:text="h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sg"
            android:layout_alignEnd="@+id/se"
            android:id="@+id/sh" />

        <Button
            android:text="i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sh"
            android:layout_alignParentEnd="true"
            android:id="@+id/si" />

        <Button
            android:text="j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sg"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_marginTop="12dp"
            android:id="@+id/sj" />

        <Button
            android:text="k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sj"
            android:layout_alignStart="@+id/sh"
            android:id="@+id/sk" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <Button
            android:text="m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sm"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/sj"
            android:layout_alignParentStart="true" />

        <Button
            android:text="n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sm"
            android:layout_alignStart="@+id/sk"
            android:id="@+id/sn" />

        <Button
            android:text="o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sn"
            android:layout_alignParentEnd="true"
            android:id="@+id/so" />

        <Button
            android:text="p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/sp"
            android:layout_below="@+id/sm"
            android:layout_alignParentStart="true" />

        <Button
            android:text="q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sp"
            android:layout_alignEnd="@+id/sn"
            android:id="@+id/sq" />

        <Button
            android:text="r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sq"
            android:layout_alignParentEnd="true"
            android:id="@+id/sr" />

        <Button
            android:text="s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_marginTop="14dp"
            android:id="@+id/ss" />

        <Button
            android:text="t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ss"
            android:layout_alignStart="@+id/sq"
            android:id="@+id/st" />

        <Button
            android:text="w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/st"
            android:id="@+id/sw" />

        <Button
            android:text="u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/su"
            android:layout_alignBaseline="@+id/st"
            android:layout_alignBottom="@+id/st"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sl"
            android:layout_alignBaseline="@+id/sk"
            android:layout_alignBottom="@+id/sk"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sx"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/sd"
            android:layout_below="@+id/sa"
            android:layout_alignParentStart="true" />

        <Button
            android:text="v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sv"
            android:layout_below="@+id/ss"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_marginTop="11dp" />

        <Button
            android:text="g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/sg"
            android:layout_below="@+id/sd"
            android:layout_toEndOf="@+id/linearLayout" />


    </RelativeLayout>
    </ScrollView>





